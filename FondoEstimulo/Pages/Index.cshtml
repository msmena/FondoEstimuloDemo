@page
@model IndexModel

@{
    ViewData["Title"] = "Identificación";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        @{
            if (!String.IsNullOrEmpty(Model.CustomMessage))
            {
                <p class="alert alert-info">@Model.CustomMessage</p>
            }
        }
        <h2>Identificación</h2>
        <section>
            <form id="account" method="post">
                <h4>Ingrese los siguientes datos</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Usuario"></label>
                    <input asp-for="Input.Usuario" class="form-control" />
                    <span asp-validation-for="Input.Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="bi-box-arrow-right mr-2"></i>Ingresar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="reestablecer-contrasena" asp-page="./ReestablecerContrasena" class="btn btn-outline-primary"><i class="bi-at mr-2"></i>Reestablecer contraseña</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}